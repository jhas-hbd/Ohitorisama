<header>
  <nav class="navbar navbar-expand-lg py-4">
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav mx-5 d-flex ml-auto">
        <li>
          <div class="menu-btn-container">
            <button id="menuBtn" class="btn btn-lg mx-3" style="background-color: white; color: #007394; border: 1px solid #007394;">Menu</button>
            <div class="menu-dropdown" id="menuDropdown">
              <ul>
                <% if admin_signed_in? %>
                  <% if request.fullpath.include? "/admin" %>
                    <li>
                      <%= link_to '管理者ログアウト', destroy_admin_session_path, method: :delete %>
                    </li>
                    <li>
                      <%= link_to "ユーザー一覧", admin_users_path %>
                    </li>
                    <li>
                      <%= link_to "プラン一覧", admin_plans_path %>
                    </li>
                    <li>
                      <%= link_to "コメント一覧", comment_admin_plans_path %>
                    </li>
                  <% end %>
                <% elsif user_signed_in? %>
                  <li>
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                  </li>
                  <li>
                    <%= link_to "マイページ", user_path(current_user) %>
                  </li>
                  <li>
                    <%= link_to "プラン", new_plan_path %>
                  </li>
                  <li>
                    <%= link_to "プラン一覧", plans_path %>
                  </li>
                  <li>
                    <%= link_to "ブックマーク一覧", bookmark_users_path %>
                  </li>
                  <div class="search_form">
                    <%= form_with url: search_path, local: true, method: :get do |f| %>
                      <li>
                        絞り込み検索<br>
                        <%= f.select :prefecture, Plan.prefectures.keys, { include_blank: '都道府県'} %>
                        <%= f.select :stay_days, Plan.stay_days.keys, { include_blank: '宿泊日数'} %><br>
                        <%= f.select :budget, Plan.budgets.keys, { include_blank: '予算'} %>
                        <%= f.select :main_vehicle, Plan.main_vehicles.keys, { include_blank: '移動手段'} %><br>
                        <%= f.text_field :key_word, :placeholder => "キーワード" %>
                        <%= button_tag type: "submit", class: "btn btn-default" do %>
                          <i class="fas fa-search"></i>
                        <% end %>
                      </li>
                    <% end %>
                  </div>

                  <div class="tag_search">
                    <%= form_with url: tag_search_path, local: true, method: :get do |f| %>
                      <li>
                        タグ検索<br>
                        <%= f.text_field :tag_name, :placeholder => "例）一人旅" %>
                        <%= button_tag type: "submit", class: "btn btn-default" do %>
                          <i class="fas fa-search"></i>
                        <% end %>
                      </li>
                    <% end %>
                  </div>

                <% else %>
                  <li>
                    <%= link_to "新規登録", new_user_registration_path %>
                  </li>
                  <li>
                    <%= link_to "ログイン", new_user_session_path %>
                  </li>
                  <li>
                    <%= link_to "管理者ログイン", new_admin_session_path %>
                  </li>
                  <li>
                    <%= link_to 'ゲストログイン（ユーザー用）', users_guest_sign_in_path, method: :post %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>