<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h3 class="my-4">新規会員登録</h3>

      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="col-md-4"><%= f.label :ユーザーネーム %></div>
          <div class="col-md-4 text-right"><%= f.text_field :name, autofocus: true %></div>
        </div>

        <div class="row">
          <div class="col-md-4"><%= f.label :メールアドレス %></div>
          <div class="col-md-4 text-right"><%= f.email_field :email, autocomplete: "email" %></div>
        </div>

        <div class="row">
          <div class="col-md-4"><%= f.label :パスワード %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </div>
          <div class="col-md-4 text-right"><%= f.password_field :password, autocomplete: "new-password" %></div>
        </div>

        <div class="row">
          <div class="col-md-4"><%= f.label :パスワード（確認用） %></div>
          <div class="col-md-4 text-right"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
        </div>

        <div class="row mt-3">
          <div class="col-md-4"></div>
          <div class="col-md-4 text-right"><%= f.submit "新規登録", class: "btn btn-sm btn-outline-dark" %></div>
        </div>
      <% end %>

      <div class="mt-5">
        <h4 class="my-4">既に登録済みの方</h4>
        <%= render "public/shared/links" %>からログインしてください。
      </div>

    </div>
  </div>
</div>