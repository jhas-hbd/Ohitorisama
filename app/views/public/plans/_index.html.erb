<div class="row justify-content-center">
  <% plans.each do |plan| %>
  <div class="mr-3 mb-5">
    <div>
      <%= image_tag plan.get_plan_image, size: '300x200' %>
    </div>
    <div>
      <div>
        <%= link_to plan_path(plan) do %>
          【<%= plan.title %>】
        <% end %>
        <%= plan.prefecture %>
      </div>
      
      <div>
        <%= plan.impression %>
      </div>

      <div class="d-flex">
        <% plan.tags.each do |tag| %>
          <i class="fas fa-tag"></i>
          <%= tag.name %><br>
        <% end %>
        <p id="bookmark_buttons_<%= plan.id %>">
          <%= render 'public/bookmarks/bookmark', plan: plan %>
        </p>
      </div>

      <div>
        <%= plan.created_at.strftime("%Y/%m/%d") %>
        <%= image_tag plan.user.get_profile_image, size: '40x40', class: "rounded-circle" %>
      </div>
    </div>
    
  </div>
  <% end %>
</div>