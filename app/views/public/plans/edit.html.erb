<div class="container">
  <div class="row">
    <div class="col-md-12 col-10 mx-auto pb-5 pl-md-5">
      <h4 class="my-5 text-center">プラン編集</h4>

      <%= render 'layouts/error', obj: @plan %>

      <div class="ml-md-5 text-center">
      <%= form_with model: @plan, method: :patch do |f| %>
        <div class="row">
          <%= f.label :title, "タイトル", class: "form-label col-md-4 mb-3" %>
          <%= f.text_field :title, class: "form-control col-md-4 mb-3" %>
        </div>
        <div class="row">
          <%= f.label :prefecture, "都道府県", class: "form-label col-md-4 mb-3" %>
          <%= f.select :prefecture, Plan.prefectures.keys, {}, class: "form-control col-md-4 mb-3" %>
        </div>
        <div class="row">
          <%= f.label :stay_days, "宿泊日数", class: "form-label col-md-4 mb-3" %>
          <%= f.select :stay_days, Plan.stay_days.keys, {}, class: "form-control col-md-4 mb-3" %>
        </div>
        <div class="row">
          <%= f.label :budget, "予算", class: "form-label col-md-4 mb-3" %>
          <%= f.select :budget, Plan.budgets.keys, {}, class: "form-control col-md-4 mb-3" %>
        </div>
        <div class="row">
          <%= f.label :main_vehicle, "主な移動手段", class: "form-label col-md-4 mb-3" %>
          <%= f.select :main_vehicle, Plan.main_vehicles.keys, {}, class: "form-control col-md-4 mb-3" %>
        </div>
        <div class="row">
          <%= f.label :impression, "感想", class: "form-label col-md-4 mb-3" %>
          <%= f.text_area :impression, class: "form-control col-md-4 mb-3" %>
        </div>
        <div class="row d-flex">
          <%= f.label :plan_images, "思い出（５枚まで選択できます）", class: "form-label col-md-4 mb-3" %>
          <%= f.file_field :plan_images, multiple: true, class: "form-control-file col-md-4 mb-3", accept: "image/*" %>
        </div>
        <div class="row d-flex">
          <%= f.label :name, "タグ(,で複数タグ登録できます)", class: "form-label col-md-4 mb-3" %>
          <%= f.text_field :name,value: @tag_list, class: 'form-control col-md-4 mb-3' %>
        </div>
        <div class="row d-flex">
          <div class="col-md-4"></div>
          <div class="col-md-4">
            <%= f.submit "変更を保存", class: "btn btn-outline-dark mt-5 mr-5" %>
            <%= link_to "削除", plan_path(@plan), method: :delete, data: { confirm: "日付やスケジュールも消えますがよろしいですか？"}, class: "btn btn-sm btn-outline-danger mt-5 ml-5" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>