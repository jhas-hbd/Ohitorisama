<% plan.comments.each do |comment| %>
  <%= link_to user_path(comment.user) do %>
    <%= image_tag comment.user.get_profile_image, size: '40x40', class: "rounded-circle" %>
  <% end %>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %>
  <% if comment.user == current_user %>
    <%= link_to plan_comment_path(plan, comment), method: :delete, remote: true do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  <% end %>
  <p class="pl-5"><%= simple_format(comment.comment, class: 'text-break') %></p>
<% end %>