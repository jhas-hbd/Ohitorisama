<div class="container">
  <div class="row">
    <div class="col-md-7 mx-auto">
      <div class="d-flex">
        <%= image_tag @user.get_profile_image, size: '200x200', class: "rounded-circle ml-3 mr-5" %>
        <div class="mt-3">
          <p style="font-size: 25px;">
            <strong><%= @user.name %></strong>
          </p>
          <p style="font-size: 20px;">
            <%= @user.introduction %>
          </p>

          <div class="d-flex">
            <div class="d-flex mr-3">
              フォロー：
              <p id="follows_count"><%= render 'public/relationships/follows', user: @user %></p>
            </div>

            <div class="d-flex mr-3">
              フォロワー：
              <p id="followers_count"><%= render 'public/relationships/followers', user: @user %></p>
            </div>

            <% if current_user != @user %>

              <div id="follow_btn_<%= @user.id %>">
                <%= render 'public/relationships/btn', user: @user %>
              </div>

            <% else %>
              <% if current_user.guest_user? %>
                <p>編集不可</p>
              <% else %>
                <%= link_to "編集", edit_user_path, class: "btn btn-sm btn-outline-dark ml-5", style: "color: black;" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-11 mx-auto">
      <h4 class="my-5">投稿一覧</h4>
      <%= render "public/plans/index", plans: @plans %>
    </div>
  </div>
</div>