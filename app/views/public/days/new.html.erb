<div class"container">
  <div class="row">
    <div class="col-md-6 mx-auto pb-5 pl-5">
      <h4 class="my-5">日にち入力</h4>

      <%= render 'layouts/error', obj: @day %>

      <%= form_with model: @day, url: plan_days_path do |f| %>
        <div class="form_group">
          <%= f.label :日にち, class: "col-md-4" %>
          <%= f.date_select :day, use_month_numbers: true, class: "col-md-4" %>
        </div>
        <div class="form_group d-flex">
          <div class="col-md-4"></div>
          <%= f.submit "スケジュール入力", class: "btn btn-outline-dark ml-5 mt-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>