<% if current_user.following?(user) %>
  <%= link_to "フォロー中", user_relationships_path(user.id), class: "btn btn-sm btn-dark text-white", remote: true, method: :delete %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-sm btn-outline-dark link", remote: true, method: :post %>
<% end %>