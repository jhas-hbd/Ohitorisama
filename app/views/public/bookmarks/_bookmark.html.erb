<% if plan.bookmarked_by?(current_user) %>
  <%= link_to plan_bookmarks_path(plan), method: :delete, remote: true, data: {"turbolinks" => false}, class: "ml-3" do %>
    <i class="fas fa-bookmark"></i> <%= plan.bookmarks.count %>
  <% end %>
<% else %>
  <%= link_to plan_bookmarks_path(plan), method: :post, remote: true, data: {"turbolinks" => false}, class: "ml-3" do %>
    <i class="far fa-bookmark"></i> <%= plan.bookmarks.count %>
  <% end %>
<% end %>