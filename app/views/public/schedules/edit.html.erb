<div class"container">
  <div class="row">
    <div class="col-md-8 mx-auto pb-5 pl-5">

      <%= render 'layouts/error', obj: @schedule %>

      <div class="ml-5">
        <%= form_with model: [@plan, @day, @schedule], method: :patch do |f| %>
          <div class="row">
            <%= f.label :開始時刻, class: "col-md-4 mb-3" %>
            <%= f.time_select :start_at, {}, class: "col-md-2 mb-3" %>
          </div>
          <div class="row">
            <%= f.label :終了時刻, class: "col-md-4 mb-3" %>
            <%= f.time_select :finished_at, {}, class: "col-md-2 mb-3" %>
          </div>
          <div class="row">
            <%= f.label :場所やイベント, class: "col-md-4 mb-3" %>
            <%= f.text_field :place, class: "col-md-4 mb-3" %>
          </div>
          <div class="row">
            <%= f.label :コメント, class: "col-md-4 mb-3" %>
            <%= f.text_area :schedule_comment, class: "col-md-4 mb-3" %>
          </div>
          <div class="row">
            <%= f.label :費用, class: "col-md-4 mb-3" %>
            <%= f.text_field :cost, :placeholder => "ない場合は0と記入", class: "col-md-4 mb-3" %> 円
          </div>
          <div class="row d-flex">
            <p class="col-md-4">そこまでの</p>
            <p class="col-md-4">-------------------------------------------</p>
          </div>
          <div class="row">
            <%= f.label :移動手段, class: "col-md-4 mb-3" %>
            <%= f.select :transportation, Schedule.transportations.keys, { include_blank: '---' }, class: "col-md-4 mb-3" %>
          </div>
          <div class="row">
            <%= f.label :移動時間, class: "col-md-4 mb-3" %>
            <%= f.text_field :transfer_time, :placeholder => "ない場合は0と記入", class: "col-md-4 mb-3" %> 分
          </div>
          <div class="row">
            <%= f.label :交通費, class: "col-md-4 mb-3" %>
            <%= f.text_field :expense, :placeholder => "ない場合は0と記入", class: "col-md-4 mb-3" %> 円
          </div>
          <div class="row d-flex">
            <div class="col-md-4"></div>
            <div class="col-md-4">
              <%= f.submit "確認画面", class: "btn btn-outline-dark mr-5 mt-5" %>
              <%= link_to "削除", plan_day_schedule_path(@plan, @day, @schedule), method: :delete, class: "btn btn-sm btn-outline-danger mt-5 ml-5" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>