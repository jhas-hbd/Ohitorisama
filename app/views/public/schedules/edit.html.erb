<div class="container">
  <div class="row">
    <div class="col-md-12 col-10 mx-auto pb-5 pl-md-5">

      <%= render 'layouts/error', obj: @schedule %>

      <div class="ml-md-5">
        <%= form_with model: [@day, @schedule], method: :patch do |f| %>
          <div class="row">
            <label class="col-md-4 mb-3">開始時刻</label>
            <%= f.time_select :start_at, {}, class: "form-control col-md-2 col-5 mb-3" %>
          </div>
          <div class="row">
            <label class="col-md-4 mb-3">終了時刻</label>
            <%= f.time_select :finished_at, {}, class: "form-control col-md-2 col-5 mb-3" %>
          </div>
          <div class="row">
            <label class="col-md-4 mb-3">場所やイベント</label>
            <%= f.text_field :place, class: "form-control col-md-4 mb-3" %>
          </div>
          <div class="row">
            <label class="col-md-4 mb-3">メモ</label>
            <%= f.text_area :schedule_comment, class: "form-control col-md-4 mb-3" %>
          </div>
          <div class="row">
            <label class="col-md-4 mb-3">費用</label>
            <%= f.text_field :cost, :placeholder => "ない場合は0と記入", class: "form-control col-md-4 col-6 mb-3 mr-2" %> 円
          </div>
          <div class="row d-flex">
            <p class="col-md-4">そこまでの</p>
            <p class="col-md-4 ml-md-4">---------------------------------------</p>
          </div>
          <div class="row">
            <label class="col-md-4 mb-3">移動手段</label>
            <%= f.select :transportation, Schedule.transportations.keys, { include_blank: '---' }, class: "form-control col-md-4 col-6 mb-3" %>
          </div>
          <div class="row">
            <label class="col-md-4 mb-3">移動時間</label>
            <%= f.text_field :transfer_time, :placeholder => "ない場合は0と記入", class: "form-control col-md-4 col-6 mb-3" %> 分
          </div>
          <div class="row">
            <label class="col-md-4 mb-3">交通費</label>
            <%= f.text_field :expense, :placeholder => "ない場合は0と記入", class: "form-control col-md-4 col-6 mb-3" %> 円
          </div>
          <div class="row d-flex justify-content-center">
            <%= f.submit "変更を保存", class: "btn btn-outline-dark mr-5 mt-5" %>
            <%= link_to "削除", day_schedule_path(@day, @schedule), method: :delete, class: "btn btn-sm btn-outline-danger mt-5 ml-5" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>