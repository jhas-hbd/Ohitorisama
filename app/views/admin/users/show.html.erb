<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h4 class="my-5 text-center"><%= @user.name %>さんの情報詳細</h4>
      <div class="row my-4">
        <div class="col-md-6 text-center">ユーザーID</div>
        <div class="col-md-6 text-center"><%= @user.id %></div>
      </div>
      <div class="row my-4">
        <div class="col-md-6 text-center">ユーザーネーム</div>
        <div class="col-md-6 text-center"><%= @user.name %></div>
      </div>
      <div class="row my-4">
        <div class="col-md-6 text-center">自己紹介文</div>
        <div class="col-md-6 text-center"><%= @user.introduction %></div>
      </div>
      <div class="row my-4">
        <div class="col-md-6 text-center">メールアドレス</div>
        <div class="col-md-6 text-center"><%= @user.email %></div>
      </div>
      <div class="row my-4">
        <div class="col-md-6 text-center">ユーザーステータス</div>
        <div class="col-md-6 text-center"><%= @user.user_status %></div>
      </div>
      <div class="row justify-content-center my-5">
        <% if @user.email == 'guest@example.com'%>
          <p>ゲストユーザーの編集はできません。</p>
        <% else %>
          <%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-outline-dark mr-5" %>
        <% end %>
        <%= link_to "プラン一覧", individual_admin_plan_path(@user), class: "btn btn-outline-dark ml-5" %>
      </div>
    </div>
  </div>
</div>