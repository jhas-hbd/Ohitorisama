<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h4 class="my-5"><%= @user.name %>さんの会員詳細</h4>
      <table class="table table-borderless">
        <tr>
          <th>ユーザーID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>ユーザーネーム</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>自己紹介文</th>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>ユーザーステータス</th>
          <td><%= @user.user_status %></td>
        </tr>
      </table>
      <div class="row justify-content-center my-5">
        <%= link_to "編集", edit_admin_user_path(@user) %>
      </div>
    </div>
  </div>
</div>