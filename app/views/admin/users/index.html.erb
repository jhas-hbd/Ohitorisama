<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5 text-center">ユーザー一覧</h4>
      <div class="row">
        <div class="col-3 text-center">ユーザーID</div>
        <div class="col-3 text-center">ユーザーネーム</div>
        <div class="col-3 text-center">メールアドレス</div>
        <div class="col-3 text-center">ステータス</div>
      </div>
      <% @users.each do |user| %>
        <div class="row my-4">
          <div class="col-3 text-center"><%= user.id %></div>
          <div class="col-3 text-center">
            <%= link_to admin_user_path(user) do %>
              <%= simple_format(user.name, class: 'text-break') %>
            <% end %>
          </div>
          <div class="col-3 text-center"><%= simple_format(user.email, class: 'text-break') %></div>
          <div class="col-3 text-center">
            <% if user.is_deleted == true %>
              <span style="color:darkgray;"><%= "退会" %></strong>
            <% else %>
              <strong style="color:orange;"><%= "有効" %></strong>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="row justify-content-center my-5">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>