<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">ユーザー一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>ユーザーID</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
            <th>ユーザーステータス</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted == true %>
                <span style="color:darkgray;"><%= "退会" %></strong>
              <% else %>
                <strong style="color:orange;"><%= "有効" %></strong>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>