<div class="container">
  <div class="row">
    <div class="col-md-6 col-10 mx-auto">
      <h2 class="my-5 text-center">管理者ログイン</h2>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field d-md-flex mb-3">
          <%= f.label :email, "メールアドレス", class: "col-md-6" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-6" %>
        </div>
        <div class="field d-md-flex">
          <%= f.label :password, "パスワード", class: "col-md-6" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-6" %>
        </div>
        <div>
          <% if devise_mapping.rememberable? %>
            <div class="field d-md-flex mt-3">
              <div class="col-md-6"></div>
              <div class="col-md-6">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="actions text-center mt-3">
          <%= f.submit "ログイン", class: "btn btn-outline-dark" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>

    </div>
  </div>
</div>