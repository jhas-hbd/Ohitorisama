<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto text-center py-5">

      <div>
        <p>
          <%= @plan.title %>
        </p>

        <div class="swiper" style="width: 100%; height: 300px;">
          <div class="swiper-wrapper">
            <% if @plan.plan_images.attached? %>
              <% @plan.plan_images.each do |image| %>
              <div class="swiper-slide">
                <%= image_tag image, size: "400x300", class: 'img-fluid d-block mx-auto', style: 'width: 400px; height: 300px; object-fit: cover;' %>
              </div>
              <% end %>
            <% else %>
              <p class="mx-auto" style="line-height: 300px;">no image</p>
            <% end %>
          </div>
          <!-- ページネーションの要素 -->
          <div class="swiper-pagination"></div>
           <!-- ナビゲーションボタン （前、次） -->
          <div class="swiper-button-prev"><i class="fas fa-chevron-circle-left"></i></div>
          <div class="swiper-button-next"><i class="fas fa-chevron-circle-right"></i></div>
        </div>

        <div>
          <div class="py-3">
            <%= @plan.prefecture %> |
            <%= @plan.stay_days %> |
            <%= @plan.main_vehicle %> |
          </div>
          <%= @plan.budget %><br>
          <%= simple_format(@plan.impression, class: 'text-break') %><br>
          <% @plan_tags.each do |tag| %>
            <i class="fas fa-tag"></i>
            <%= tag.name %>
          <% end %>
        </div>
      </div>

      <div class="row my-5">
        <div class="col-md-3 col-5 mx-auto">時間</div>
        <div class="col-md-3 col-5 mx-auto">場合やイベント/費用</div>
        <div class="col-md-3">コメント</div>
        <div class="col-md-3">そこまでの移動</div>
      </div>

      <% @days.order(day: :asc).each do |day| %>
      <div style="border-bottom: 1px solid;">
        <p>
          <%= day.day.strftime("%Y年%m月%d日") %>
        </p>
        <div class="row mb-5">
          <% day.schedules.order(start_at: :asc).each do |schedule| %>
          <div class="col-md-3 col-5 mx-auto">
            <%= schedule.start_at.strftime('%H:%M') %> ~
            <%= schedule.finished_at.strftime('%H:%M') %>
          </div>
          <div class="col-md-3 col-5 mx-auto">
            <%= schedule.place %> |
            <%= schedule.cost %> 円
          </div>
          <div class="col-md-3">
            <%= schedule.schedule_comment %>
          </div>
          <div class="col-md-3">
            <%= schedule.transportation %> |
            <%= schedule.transfer_time %> 分 |
            <%= schedule.expense %> 円
          </div>
          <% end %>
        </div>
      </div>
      <% end %>
      <div>
        <%= link_to "戻る", admin_plans_path, class: "btn btn-outline-dark mx-auto mt-5" %>
      </div>
    </div>
  </div>
</div>