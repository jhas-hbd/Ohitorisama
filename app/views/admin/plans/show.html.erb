<div class"container">
  <div class="row">
    <div class="col-md-8 mx-auto text-center py-5">

      <div>
        <p>
          <%= @plan.title %>
        </p>
        <%= image_tag @plan.get_plan_image, size: '400x300' %>
        <p>
          <%= @plan.prefecture %> |
          <%= @plan.stay_days %> |
          <%= @plan.main_vehicle %> |
          <%= @plan.budget %><br>
          <%= @plan.impression %><br>
          <% @plan_tags.each do |tag| %>
            <i class="fas fa-tag"></i>
            <%= tag.name %>
          <% end %>
        </p>
      </div>

      <div class="row my-5">
        <div class="col-md-3 col-5 mx-auto">時間</div>
        <div class="col-md-3 col-5 mx-auto">場合やイベント/費用</div>
        <div class="col-md-3">コメント</div>
        <div class="col-md-3">そこまでの移動</div>
      </div>

      <% @days.each do |day| %>
      <div>
        <p>
          <%= day.date.strftime("%Y年%m月%d日") %>
        </p>
        <div class="row mb-5">
          <% day.schedules.each do |schedule| %>
          <div class="col-md-3 col-5 mx-auto">
            <%= schedule.start_at.strftime('%H:%M') %> ~
            <%= schedule.finished_at.strftime('%H:%M') %>
          </div>
          <div class="col-md-3 col-5 mx-auto">
            <%= schedule.place %> |
            <%= schedule.cost %> 円
          </div>
          <div class="col-md-3">
            <%= schedule.schedule_comment %>
          </div>
          <div class="col-md-3">
            <%= schedule.transportation %> |
            <%= schedule.transfer_time %> 分 |
            <%= schedule.expense %> 円
          </div>
          <% end %>
        </div>
      </div>
      <% end %>
      <div class="row">
        <%= link_to "戻る", admin_plans_path, class: "btn btn-outline-dark mx-auto" %>
      </div>
    </div>
  </div>
</div>