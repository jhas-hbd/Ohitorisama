<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">コメント一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>コメントID</th>
            <th>ユーザーネーム</th>
            <th>コメント内容</th>
            <th>コメントしたプラン</th>
          </tr>
        </thead>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.id %></td>
            <td><%= comment.user.name %></td>
            <td>
              <%= comment.comment %><br>
              <%= link_to "削除", admin_plan_comment_path(comment.plan_id, comment), method: :delete %>
            </td>
            <td>
              <%= link_to admin_plan_path(comment.plan) do %>
                <%= comment.plan.title %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>