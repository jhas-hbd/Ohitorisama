<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">プラン一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>プランID</th>
            <th>ユーザーネーム</th>
            <th>タイトル</th>
          </tr>
        </thead>
        <% @plans.each do |plan| %>
          <tr>
            <td><%= plan.id %></td>
            <td><%= plan.user.name %></td>
            <td>
              <%= link_to admin_plan_path(plan) do %>
                <%= plan.title %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>