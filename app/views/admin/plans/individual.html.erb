<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">プラン一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>投稿日時</th>
            <th>タイトル</th>
            <th>イメージ</th>
          </tr>
        </thead>
        <% @plans.each do |plan| %>
          <tr>
            <td><%= plan.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <%= link_to admin_plan_path(plan) do %>
                <%= plan.title %>
              <% end %>
            </td>
            <td><%= image_tag plan.get_plan_image(100, 100) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>