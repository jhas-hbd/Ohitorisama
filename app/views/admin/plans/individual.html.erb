<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">プラン一覧</h4>
      <div class="row">
        <div class="col-md-4 text-center">投稿日時</div>
        <div class="col-md-4 text-center">タイトル</div>
        <div class="col-md-4 text-center">イメージ</div>
      </div>
      <% @plans.each do |plan| %>
        <div class="row my-4">
          <div class="col-md-4 text-center"><%= plan.created_at.strftime("%Y/%m/%d") %></div>
          <div class="col-md-4 text-center">
            <%= link_to admin_plan_path(plan) do %>
              <%= plan.title %>
            <% end %>
          </div>
          <div class="col-md-4 text-center"><%= image_tag plan.get_plan_image, size: '150x100' %></div>
        </div>
      <% end %>
      <div class="row justify-content-center my-5">
        <%= paginate @plans %>
      </div>
    </div>
  </div>
</div>