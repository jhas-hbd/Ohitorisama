<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5 text-center">プラン一覧</h4>
      <div class="row">
        <div class="col-4 text-center">投稿日時</div>
        <div class="col-4 text-center">タイトル</div>
        <div class="col-4 text-center">イメージ</div>
      </div>
      <% @plans.each do |plan| %>
        <div class="row my-4">
          <div class="col-4 text-center"><%= plan.created_at.strftime("%Y/%m/%d") %></div>
          <div class="col-4 text-center">
            <%= link_to admin_plan_path(plan) do %>
              <%= plan.title %>
            <% end %>
          </div>
          <div class="col-4 text-center">
            <div class="swiper" style="width: 100%; height: 100%;">
              <div class="swiper-wrapper">
                <% if plan.plan_images.attached? %>
                  <% plan.plan_images.each do |image| %>
                  <div class="swiper-slide">
                    <%= link_to admin_plan_path(plan) do %>
                      <%= image_tag image, size: '100x70' %>
                    <% end %>
                  </div>
                  <% end %>
                <% else %>
                  <p class="mx-auto" style="line-height: 70px;">no image</p>
                <% end %>
              </div>
              <!-- ページネーションの要素 -->
              <div class="swiper-pagination"></div>
               <!-- ナビゲーションボタン （前、次） -->
              <div class="swiper-button-prev"><i class="fas fa-chevron-circle-left"></i></div>
              <div class="swiper-button-next"><i class="fas fa-chevron-circle-right"></i></div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="row justify-content-center my-5">
        <%= paginate @plans %>
      </div>
    </div>
  </div>
</div>